<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medappjam.HomeActivity"
    android:gravity="center"
    android:layout_gravity="center"
    tools:background="@color/white"
    tools:layout_width="match_parent"
    android:background="@color/white">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:onClick="settingsScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchToArzangTest (HomeActivity)"
            android:id="@+id/button1"
            android:layout_above="@+id/button2"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignStart="@+id/button3" />

        <Button
            android:text="myNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchNumbersInput"
            android:id="@+id/inputNumbers"
            tools:visibility="visible"
            android:layout_above="@+id/recordsTable"
            android:layout_alignLeft="@+id/recordsTable"
            android:layout_alignStart="@+id/recordsTable" />

        <Button
            android:text="MyProviders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="myProvidersScreen"
            android:id="@+id/button2"
            android:layout_above="@+id/inputNumbers"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="myRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchRecordsTable"
            android:id="@+id/recordsTable"
            android:layout_above="@+id/button3"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="LOG OUT!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:background="@drawable/logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:text="Hello, "
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

